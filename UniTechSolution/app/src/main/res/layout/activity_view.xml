<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="unitech.au.com.unitechsolution.ViewActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="1" android:id="@+id/loginMainLayout"
        android:layout_alignParentTop="true">


        <!--Input ID Area//-->
        <LinearLayout
            android:layout_marginTop="@dimen/login_input_area_padding"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:weightSum="10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/WhiteSpace1"
                    />

                <ImageView
                    android:id="@+id/tvShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:src="@drawable/user_folder_48"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="User Info"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/WhiteSpace1"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="@dimen/view_left_padding"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ID:"
                    />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/login_placehold_text"
                    android:inputType="text"
                    android:background="@drawable/group_top"
                    android:ems="8"
                    android:paddingTop="@dimen/login_text_top_bottom_padding"
                    android:paddingBottom="@dimen/login_text_top_bottom_padding"
                    android:paddingRight="@dimen/login_text_padding"
                    android:paddingLeft="@dimen/login_text_padding"
                    android:textCursorDrawable="@null"
                    android:id="@+id/viewIdText"
                    android:layout_weight="6"
                    android:editable="false"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:hint="@string/RegId"
                    android:textColorHint="@color/login_placehold_text"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/WhiteSpace1"
                    />
            </LinearLayout>
            <!--Input PASS Area//-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_width="@dimen/view_left_padding"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pass:"
                    />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/login_placehold_text"
                    android:inputType="text"
                    android:background="@drawable/group_bottom"
                    android:ems="8"
                    android:paddingTop="@dimen/login_text_top_bottom_padding"
                    android:paddingBottom="@dimen/login_text_top_bottom_padding"
                    android:paddingRight="@dimen/login_text_padding"
                    android:paddingLeft="@dimen/login_text_padding"
                    android:textCursorDrawable="@null"
                    android:editable="false"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:id="@+id/viewPassText" android:layout_weight="6"
                    android:hint="@string/RegPassword" android:textColorHint="@color/login_placehold_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/WhiteSpace1"
                    />
            </LinearLayout>

            <!--Input PASS Area//-->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_width="@dimen/view_left_padding"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Name:"
                    />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/login_placehold_text"
                    android:inputType="text"
                    android:background="@drawable/group_top"
                    android:ems="8"
                    android:paddingTop="@dimen/login_text_top_bottom_padding"
                    android:paddingBottom="@dimen/login_text_top_bottom_padding"
                    android:paddingRight="@dimen/login_text_padding"
                    android:paddingLeft="@dimen/login_text_padding"
                    android:textCursorDrawable="@null"
                    android:editable="false"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:id="@+id/viewNameText" android:layout_weight="6"
                    android:hint="@string/RegName" android:textColorHint="@color/login_placehold_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/WhiteSpace1"
                    />
            </LinearLayout>

            <!--Input PASS Area//-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_width="@dimen/view_left_padding"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Adr:"
                    />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/login_placehold_text"
                    android:inputType="text"
                    android:background="@drawable/group_row"
                    android:ems="8"
                    android:paddingTop="@dimen/login_text_top_bottom_padding"
                    android:paddingBottom="@dimen/login_text_top_bottom_padding"
                    android:paddingRight="@dimen/login_text_padding"
                    android:paddingLeft="@dimen/login_text_padding"
                    android:textCursorDrawable="@null"
                    android:editable="false"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:id="@+id/viewAddressText" android:layout_weight="6"
                    android:hint="@string/RegAddress" android:textColorHint="@color/login_placehold_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/WhiteSpace1"
                    />
            </LinearLayout>

            <!--Input PASS Area//-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_width="@dimen/view_left_padding"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="DOB:"
                    />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/login_placehold_text"
                    android:inputType="text"
                    android:background="@drawable/group_row"
                    android:ems="8"
                    android:paddingTop="@dimen/login_text_top_bottom_padding"
                    android:paddingBottom="@dimen/login_text_top_bottom_padding"
                    android:paddingRight="@dimen/login_text_padding"
                    android:paddingLeft="@dimen/login_text_padding"
                    android:textCursorDrawable="@null"
                    android:id="@+id/viewDobText" android:layout_weight="6"
                    android:editable="false"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"

                    android:hint="@string/RegDob" android:textColorHint="@color/login_placehold_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/WhiteSpace1"
                    />
            </LinearLayout>



            <!--Input PASS Area//-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_width="@dimen/view_left_padding"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ph:"
                    />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/login_placehold_text"
                    android:background="@drawable/group_row"
                    android:ems="8"
                    android:paddingTop="@dimen/login_text_top_bottom_padding"
                    android:paddingBottom="@dimen/login_text_top_bottom_padding"
                    android:paddingRight="@dimen/login_text_padding"
                    android:paddingLeft="@dimen/login_text_padding"
                    android:textCursorDrawable="@null"

                    android:editable="false"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:inputType="numberDecimal"
                    android:id="@+id/viewMobileText" android:layout_weight="6"
                    android:hint="@string/RegContant" android:textColorHint="@color/login_placehold_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/WhiteSpace1"
                    />
            </LinearLayout>

            <!--Input PASS Area//-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_width="@dimen/view_left_padding"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ph2:"
                    />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/login_placehold_text"
                    android:background="@drawable/group_bottom"
                    android:ems="8"
                    android:paddingTop="@dimen/login_text_top_bottom_padding"
                    android:paddingBottom="@dimen/login_text_top_bottom_padding"
                    android:paddingRight="@dimen/login_text_padding"
                    android:paddingLeft="@dimen/login_text_padding"
                    android:textCursorDrawable="@null"
                    android:inputType="numberDecimal"
                    android:editable="false"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:id="@+id/viewEMobileText" android:layout_weight="6"
                    android:textColorHint="@color/login_placehold_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/WhiteSpace1"
                    />
            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="10px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="left|center_vertical"
                    android:weightSum="10">
                    <TextView
                        android:layout_width="@dimen/view_left_padding"
                        android:layout_height="wrap_content"
                        android:text="Gender:"
                        android:layout_weight="0.5"
                        />

                    <ImageView
                        android:id="@+id/ivGender"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:src="@drawable/male_48"/>

                    <TextView
                        android:layout_weight="7"
                        android:id="@+id/tvGender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(Male)"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/login_input_area_bw_tx_bt_padding2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <com.dd.CircularProgressButton
                    android:id="@+id/backBtn"
                    android:layout_width="196dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="0dp"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="normal"
                    app:cpb_textIdle="Back"
                    app:cpb_cornerRadius="48dp"
                    android:textAllCaps="false"  />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
